<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.apr7.sponge.dao.AuthModuleResourceMappingDao">
	<select id="listResourceByModuleIds" resultType="com.apr7.sponge.dao.AuthResource">
		SELECT
			  r.FID id
			, r.FNAME name
			, r.FPATH path
		FROM
			T_AUTH_MODULE_RESOURCE_MAPPING m
		JOIN
			T_AUTH_RESOURCE r
		ON
			r.FID = m.FRESOURCE_ID
		WHERE
			m.FMODULE_ID IN
		<foreach collection="moduleIds" item="moduleId" separator="," open="(" close=")">
			#{moduleId}
		</foreach>
	</select>
</mapper>